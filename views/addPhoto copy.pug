extends accountBase

block form
  h2.form__title Dodaj zdjęcie do kategorii
  form.form.form__addPhoto
    .form__group 
      label.form__label(for='stairsSelect') Wybierz kategorię
      select.form__input(id='categories' name="categories" required)
        option(value="") Wybierz opcje
          each item in stairs
            option(value=`${item.slug}` data-id=`${item.id}`)= item.name
    .form__group      
      input.form__upload(type='file', accept='image/*', id='stairImages', name='images' multiple)
      label(for='stairImages') Wybierz zdjęcia (max 5)
    
    
    .form__group 
      button.btn.account__btn(type='submit') Dodaj zdjęcia
block form2 
  .container--big.mt--bg   
    h2.form__title Usuń zdjęcia
    
    form.form.form__deletePhotos
      .form__group 
        label.form__label(for='photoSelect') Wybierz kategorię
        select.form__input(id='photoSelect' name="photoSelect" required)
          option(value="") Wybierz opcje
            each item in stairs
              option(value=`${item.slug}` data-id=`${item.id}`)= item.name
      each item, i in stairs 
        .form__group 
          label.form__label(for='photoSelect')= `wzór ${i+1}`
          input.form__inputt(type="checkbox" id='photoSelect' name="photo" value=`${item.images[i]}`)
      .form__group 
        button.btn.account__btn(type='submit') Usuń wybrane