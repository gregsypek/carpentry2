extends base 

block content 
  section#stairs.stairs
    - const splitName = stairs.name.split(' ');  
    - const partOne = splitName.slice(0,splitName.length-1);
    - const partTwoColored = splitName[splitName.length-1]
      if splitName.length > 1 
        h2.heading-secondary.container.padding--big #{partOne.join(' ')} <span>#{partTwoColored}</span>
      else 
        h2.heading-secondary.container.padding--big <span>#{splitName[0]}</span>
      .stairs__top.top 
        img(class="stairs__img container--big"
              src=`/images/${stairs.slug}/${stairs.imageCover}`
              alt=`${stairs.slug}`)
        .stairs__info.padding--small.container--big 
          h3.heading-tertiary Realizacje 
          p.stairs__invocation.description= stairs.description
      .stairs__bottom.container.padding--huge 
        .gallery 
          each img, index in stairs.images
            figure 
              img(src=`/images/${stairs.slug}/${img}` alt=`${stairs.name}`)
              figcaption.title= `wzór nr ${index+1}`

        .stairs__btn 
          a(href="/overview" class="btn btn--empty") Wróć
      .stairs__description.container--big 
        .description__aside 
        p.description= stairs.summary
          